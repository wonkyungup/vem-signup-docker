FROM ubuntu:18.04

RUN apt update -y && apt upgrade -y

# install mongodb
RUN apt install -y sudo gnupg wget systemd
RUN wget -qO - https://www.mongodb.org/static/pgp/server-5.0.asc | sudo apt-key add -
RUN echo "deb [ arch=amd64,arm64 ] https://repo.mongodb.org/apt/ubuntu bionic/mongodb-org/5.0 multiverse" | sudo tee /etc/apt/sources.list.d/mongodb-org-5.0.list
RUN apt update -y
RUN apt install -y mongodb-org

# service mongodb
RUN mkdir /mongod
COPY ./images/mongod.txt /app/mongod
RUN cat /app/mongod > /etc/init.d/mongod
RUN chmod 755 /etc/init.d/mongod